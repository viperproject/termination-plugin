import <decreases/int_decreases.sil>

function f1(i: Int): Int
requires i >= 0
ensures decreases(i)
{
    i < 10 ? 1 : (f1(i-1) < 4 || (f1(i-3) < 6) ? 1 : f1(i-1))
}

//Short circuit evaluation
function f3(i: Int): Int
ensures decreases(i)
{
    (true || f3(i) != 1) ? 1 : f3(i)
}

function f4(i: Int): Int
ensures decreases(i)
{
    (false && f4(i) != 1) ? f4(i) : 1
}

function f5(i: Int): Int
ensures decreases(i)
{
    (false ==> f5(i)>6) ? 7 : f5(i)
}