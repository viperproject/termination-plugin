import <decreases/seq_decreases.sil>

function binSearch(seq: Seq[Int], x:Int):Int
requires |seq| == 8 || |seq| == 4 || |seq| == 2
ensures decreases(seq)
{
  x == seq[|seq|/2] ? |seq|/2 :
    (|seq| == 2 ? |seq| :
    (x > seq[|seq|/2] ? binSearch(seq[|seq|/2..],x) : binSearch(seq[..|seq|/2] ,x)))
}