import <decreases/int_decreases.sil>

function f(x: Int): Int
//:: ExpectedOutput(typechecker.error)
decreasea m(x)
{
  x == 0 ? 0 : f(x-1)
}

method m(x: Int) returns (res: Int)
 requires x >= 0
 ensures res == x
{
    res := x
}

function g(x: Int): Int
//:: ExpectedOutput(typechecker.error)
ensures decreasesStar(x)
{
  x == 0 ? 0 : g(x-1)
}