import <decreases/int_decreases.sil>

field f: Int

function fac(n: Int): Int
  requires n >= 0
  ensures result >= 0
  ensures decreases(n)
{ n < 2 ? n : n * fac(n - 1) }

method test() {
  assert fac(0) == 0
  assert fac(1) == 1
  assert fac(2) == 2
  assert fac(3) == 6
  assert fac(4) == 24

  assert fac(7) >= 0

  // assert fac(10) == 3628800
}