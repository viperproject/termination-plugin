import "dec.sil"
import "pred_support.sil"

domain Decreasing{

    axiom decreasinglocations{
        forall l1: PredicateInstance, l2: PredicateInstance :: {nested(l1,l2)}
            decreasing(l1, l2) <==> nested(l1,l2)
    }

    axiom boundedlocations{
        forall l1: PredicateInstance :: {bounded(l1)}
            bounded(l1)
    }
}