import "dec.sil"

domain IntTerminationOrder{
	//Integers
    axiom integer_ax_dec{
        forall int1: Int, int2: Int :: {decreasing(int1, int2)}
            (int1 < int2) ==> decreasing(int1, int2)
    }
    axiom integer_ax_bound{
        forall int1: Int :: {bounded(int1)}
            int1 >= 0 ==> bounded(int1)
    }
}